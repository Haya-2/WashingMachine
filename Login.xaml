<Window x:Class="WashingMachine.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WashingMachine"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="500">
    <Grid>
        <TextBlock Text="Login Page" FontSize="24" HorizontalAlignment="Center" Margin="0,20,0,0" />

        <!-- Home Button -->
        <Button Content="Go to Home" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,60"
                Click="HomeButton_Click"/>

        <!-- Manager Button -->
        <Button Content="Go to Manager" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,60,0,0"
                Click="ManagerButton_Click"/>
    </Grid>
</Window>
